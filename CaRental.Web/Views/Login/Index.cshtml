@model CaRental.Web.Database.Models.User

@{
    ViewData["Title"] = "Login";
}

<div style="display: grid; place-content: center; height: 100vh">
    <div>
        <div style="text-align: center;">
            <h1>Login</h1>
            <hr />
        </div>
        <div>
            <form asp-action="OnLoginSubmit">
                <div class="row">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">E-mail:</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password:</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group" style="text-align: center; margin-top: 10px;">
                    <input type="submit" value="Login" class="btn btn-primary" />
                    <br/>
                    <a href="@Url.Action("Index", "Register")">Create a new account?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

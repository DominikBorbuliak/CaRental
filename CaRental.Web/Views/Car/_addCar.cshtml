@using CaRental.Web.Database.Models
@model Car

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add car</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="OnAddCarSubmit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="VIN" class="control-label">VIN:</label>
                        <input asp-for="VIN" class="form-control" />
                        <span asp-validation-for="VIN" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Manufacturer" class="control-label">Manufacturer:</label>
                            <input asp-for="Manufacturer" class="form-control" />
                            <span asp-validation-for="Manufacturer" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Model" class="control-label">Model:</label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Type" class="control-label">Car type:</label>
                            <select class="form-select" asp-for="Type" asp-items="Html.GetEnumSelectList<CarType>()"></select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="FuelType" class="control-label">Fuel type:</label>
                            <select class="form-select" asp-for="FuelType" asp-items="Html.GetEnumSelectList<FuelType>()"></select>
                            <span asp-validation-for="FuelType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description:</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                        <label asp-for="YearOfManufacture" class="control-label">Year of manufacture:</label>
                        <input asp-for="YearOfManufacture" class="form-control" />
                        <span asp-validation-for="YearOfManufacture" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="RentalPrice" class="control-label">Rental price:</label>
                            <input asp-for="RentalPrice" class="form-control" />
                            <span asp-validation-for="RentalPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageUrl" class="control-label">Image url:</label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="text-align: center; margin-top: 10px;">
                        <div class="modal-footer">
                            <input type="submit" value="Add car" class="btn btn-outline-success"/>
                        </div>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>
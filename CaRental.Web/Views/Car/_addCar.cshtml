@model CaRental.Web.Database.Models.Car

@{
    Layout = null;
}

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add car</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="###################">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="VIN" class="control-label">VIN:</label>
                    <input asp-for="VIN" class="form-control" />
                    <span asp-validation-for="VIN" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                       <label asp-for="Manufacturer" class="control-label">Manufacturer:</label>
                        <input asp-for="Manufacturer" class="form-control" />
                        <span asp-validation-for="Manufacturer" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Model" class="control-label">Model:</label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FuelType" class="control-label">Fuel type:</label>
                    <input asp-for="FuelType" class="form-control" />
                    <span asp-validation-for="FuelType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description:</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                    <label asp-for="YearOfManufacture" class="control-label">Year of manufacture:</label>
                    <input asp-for="YearOfManufacture" class="form-control" />
                    <span asp-validation-for="YearOfManufacture" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="RentalPrice" class="control-label">Rental price:</label>
                    <input asp-for="RentalPrice" class="form-control" />
                    <span asp-validation-for="RentalPrice" class="text-danger"></span>
                </div>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label">Image url:</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-success">Add car</button>
            </div>
        </div>
    </div>
</div>